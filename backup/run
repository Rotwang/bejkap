#!/usr/bin/env bash

. /common

numClients="$1"
clientNum="$2"

echo "numClients: $numClients, clientNum: $clientNum"

set -e

cd "$src"

cd nexus

files_to_backup=($(ls -A | grep -v '^blobs$' | awk "NR%$numClients==$clientNum"))

for myContent in ${files_to_backup[@]}; do
  ( set -x; rsync -s -ah --delete --numeric-ids "$myContent" "$trg/0/nexus"; )
done

cd blobs

for d in */; do
  (
    cd "$d"
    for f in $(ls -A | grep -v '^content$' | awk "NR%$numClients==$clientNum"); do
      ( set -x; rsync -s -ah --delete --numeric-ids "$f" "$trg/0/nexus/blobs/$d/"; )
    done

    cd content
    for x in $(ls -A | awk "NR%$numClients==$clientNum"); do
      ( set -x; rsync -s -ah --delete --numeric-ids "$x" "$trg/0/nexus/blobs/$d/content/"; )
    done
  )
done

